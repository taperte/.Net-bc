@model List<CinemaLogic.DB.Movies>
@{
    ViewData["Title"] = "Movies";
}

@if (Model.Count > 0)
{
    <table class="table table-hover light">
        <tr>
            <th></th>
            <th>Title</th>
            <th>Genre</th>
            <th>Director</th>
            <th>Year</th>
            <th></th>
        </tr>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@(i + 1).</td>
                <td>@Model[i].Title</td>
                <td><a asp-controller="Movie" asp-action="Genres" asp-route-genreid="@Model[i].Genre.Id">@Model[i].Genre.Genre</a></td>
                <td>@Model[i].Director</td>
                <td>@Model[i].Year</td>
                <td><a asp-controller="Movie" asp-action="Movie" asp-route-id="@Model[i].Id">More info & tickets</a></td>
            </tr>
        }
    </table>
}
