@model List<CinemaLogic.DB.Bookings>
@{
    ViewData["Title"] = "My bookings";
}

<h2>My bookings</h2>
<br />
@if (Model.Count > 0)
{
    <table class="table table-hover light">
        <tr>
            <th></th>
            <th>Title</th>
            <th>Screening</th>
            <th></th>
        </tr>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@(i + 1).</td>
                <td>@Model[i].Movie.Title</td>
                <td>@Model[i].BookedTime</td>
                <td><a asp-controller="Movie" asp-action="Cancel" asp-route-time="@Model[i].BookedTime">Cancel</a></td>
            </tr>
        }
    </table>
}
else
{
    <div>You don't have any bookings yet.</div>
}
