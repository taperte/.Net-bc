<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] – A Clockwork Orange Movie Theater</title>
    <link href="~/cinema_favicon_res.ico" rel="shortcut icon" type="image/x-icon" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="text">
    <nav class="navbar fixed-top navbar-expand-lg navbar-light bg-light mb-3">
        <div class="container">
            <a asp-controller="Home" asp-action="Index"><img src="https://bn1303files.storage.live.com/y4mhrwk1ByihLo7zur-bbQXO-CgYbS7U9OLJRVF4iwoSmA5iMkB71NZtlneXRT3xWfKd6zJintAxkSwbR6BiCvr5AJ1-I9p4TsBFOlKH8gbtjokd0Dfv2E3OAeKDLViCa6WwzEmuaYP4KNGRPXcgkYripFrLg-oyW6E4Nae_GHs9Hh7npHEEVh2Qw6ksrSnAFJz?width=1135&height=220&cropmode=none" height="100"/></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse bottom" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item @(ViewContext.RouteData.Values["controller"].ToString() == "Movie" && ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "")">
                        <a class="nav-link" style="text-transform: uppercase; font-size: larger" asp-controller="Movie" asp-action="Index">Movies</a>
                    </li>
                    <li class="nav-item @(ViewContext.RouteData.Values["action"].ToString() == "Genres" ? "active" : "")">
                        <a class="nav-link" style="text-transform: uppercase; font-size: larger" asp-controller="Movie" asp-action="Genres">Genres</a>
                    </li>
                    <li class="nav-item @(ViewContext.RouteData.Values["action"].ToString() == "MyBookings" ? "active" : "")">
                        <a class="nav-link" style="text-transform: uppercase; font-size: larger" asp-controller="Booking" asp-action="MyBookings">My bookings (@ViewData["count"])</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 – <a asp-controller="Home" asp-action="Index">A Clockwork Orange Movie Theater</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
