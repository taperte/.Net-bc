@model List<Library.Logic.Data.Book>

<h1>Catalogue</h1>

@if (Model.Count > 0)
{
    <table class="table table-hover">
        <tr>
            <th style="text-align: center;">No.</th>
            <th>Title</th>
            <th>Author</th>
            <th style="text-align: center;">Year</th>
            <th style="text-align: center;">Available copies</th>
            <th style="text-align: center;"></th>
        </tr>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td style="text-align: center;">@(i + 1).</td>
                <td>@Model[i].Title</td>
                <td>@Model[i].Author</td>
                <td style="text-align: center;">@Model[i].Year</td>
                <td style="text-align: center;">@Model[i].Copies</td>
                <td style="text-align: center;"><a asp-controller="Book" asp-action="TakeBook" asp-route-title="@Model[i].Title">Borrow</a></td>
            </tr>

        }
    </table>
}
else
{
    <b>Sorry, there are no available books in the catalogue.</b>
}

