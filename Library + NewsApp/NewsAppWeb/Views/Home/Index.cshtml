@model List<NewsLogic.DB.Articles>;
@{
    ViewData["Title"] = "Latest news";
}


<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active" aria-current="page">Latest news</li>
    </ol>
</nav>
<div class="row">
    @for (int i = 0; i < 6; i++)
    {
        if (Model[i] != null)
        {
            <div class="col-md-4 col-sm-12 mb-3">
                <div class="card">
                    <img src="@Model[i].Image" />
                    <div class="card-body">
                        <a class="card-link" asp-controller="News" asp-action="Article" asp-route-id="@Model[i].ArticleId">@Model[i].Headline</a>
                    </div>
                </div>
            </div>
        }
        else
        {
            break;
        }
    }
</div>
