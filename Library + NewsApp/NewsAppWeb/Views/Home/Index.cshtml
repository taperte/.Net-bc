@model List<NewsLogic.DB.Articles>;
@{
    ViewData["Title"] = "Latest news";
}


<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active" aria-current="page">Latest news</li>
    </ol>
</nav>
<div class="row">
    @foreach (var a in Model)
    {
        <div class="col-md-4 col-sm-12 mb-3">
            <div class="card">
                <img src="@a.Image" />
                <div class="card-body">
                    <a class="card-link" asp-controller="News" asp-action="Article" asp-route-id="@a.ArticleId">@a.Headline</a>
                </div>
            </div>
        </div>
    }
</div>
