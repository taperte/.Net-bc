@model List<NewsLogic.Data.Article>;
@{
    ViewData["Title"] = "Latest news";
}


<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active" aria-current="page">Latest news</li>
    </ol>
</nav>
<div class="row">
    @for (int i = 0; i < 6; i++)
    {
        if (Model[i] != null)
        {
            <div class="col-md-4 col-sm-12 mb-3">
                <div class="card">
                    <svg class="bd-placeholder-img card-img-top" width="100%" height="180" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Image cap"><title>Placeholder</title><rect width="100%" height="100%" fill="#868e96"></rect><text x="50%" y="50%" fill="#dee2e6" dy=".3em"></text></svg>
                    <div class="card-body">
                        <a class="card-link" asp-controller="News" asp-action="Article" asp-route-id="@Model[i].Id">@Model[i].Headline</a>
                    </div>
                </div>
            </div>
        }
        else
        {
            break;
        }
    }
</div>
