@model List<NewsLogic.DB.Topics>
@{
    ViewData["Title"] = "Edit topics";
}
<h1>Edit topics</h1>
<br />
<a asp-controller="Topic" asp-action="Create" class="btn btn-primary">Add new</a>
<br />
<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Article count</th>
        <th></th>
    </tr>
    @foreach (var topic in Model)
    {
        <tr>
            <td>@topic.TopicId.</td>
            <td>@topic.TopicName</td>
            <td>@topic.Articles.Count</td>
            <td><a asp-controller="Topic" asp-action="Delete" asp-route-id="@topic.TopicId">Delete</a></td>
        </tr>
    }
</table>